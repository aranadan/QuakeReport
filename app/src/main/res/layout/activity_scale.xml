<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context="com.example.android.quakereport.ScaleActivity"
    >
    <TextView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:text="Set earthquake magnitude"
        android:textAlignment="center"
        android:textColor="@color/common_google_signin_btn_text_dark_default"/>

    <ListView
        android:id="@+id/scale_list"
        style="@android:style/Widget.DeviceDefault.ListView"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:divider="@color/common_google_signin_btn_text_dark_default"
        android:dividerHeight="0.5dp"
        android:elevation="4dp"
        >

    </ListView>

</android.support.constraint.ConstraintLayout>
